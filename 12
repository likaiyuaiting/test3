#include<stdio.h>
void star(int x)
{
	int i;
	for(i=0;i<x;i++)
	printf("  *  \n *** \n*****");
}
void Null(int x)
{
	int i;
	for(i=0;i<x;i++)
	printf("     \n     \n	 ");
}
int main(void)
{
	int i,j;
	for(i=0;i<4;i++)
	{
		Null(3-i);
		star(i);
	}

	return 0;
}
